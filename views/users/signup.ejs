<%-layout("./layouts/boilterplate.ejs") %>
<div class="row mt-3">
    <h1 class="col-8 offset-3 mt-3 pb-4" style="color: teal;"><b>Signup on wanderlust</b></h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">username Looks good!</div>
        <div class="invalid-feedback">Please enter a username</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Email is ok!</div>
        <div class="invalid-feedback">Please enter a email</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">password Looks good!</div>
        <div class="invalid-feedback">Please enter a password</div>
      </div>
      <button class="btn btn-outline-success">Signup</button>
    </form>
  </div>
</div>
